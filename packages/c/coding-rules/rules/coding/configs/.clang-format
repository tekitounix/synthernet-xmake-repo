---
BasedOnStyle: LLVM
Language: Cpp
Standard: Latest

# Basic formatting
IndentWidth: 4
ColumnLimit: 120
PointerAlignment: Left
ReferenceAlignment: Left
DerivePointerAlignment: false
BinPackArguments: false
BinPackParameters: false

# C++ specific
AllowShortFunctionsOnASingleLine: Inline
AlwaysBreakTemplateDeclarations: Yes

# Include sorting
IncludeBlocks: Regroup
IncludeCategories:
  - Regex: '^<.*\.h>'
    Priority: 1
  - Regex: "^<[a-z0-9_]+>$"
    Priority: 2
  # Project-specific library categories can be added here (Priority 3-4)
  - Regex: '^".*"'
    Priority: 5
